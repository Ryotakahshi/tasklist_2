<h1>id = 
<%= @task.id %>
 のタスク詳細ページ</h1>

<% task = @task%>
<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td>
<%= @task.id %>
</td>
  </tr>
  <tr>
    <th>状態</th>
    <td>
<%= @task.status %>
</td>
  </tr>
  <tr>
    <th>タスク</th>
    <td>
<%= @task.content %>
</td>
  </tr>
</table>

<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-default btn-xs ' %>
<%= link_to "このタスクを削除する", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>

